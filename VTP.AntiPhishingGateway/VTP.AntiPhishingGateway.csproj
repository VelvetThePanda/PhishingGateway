<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>A package designed to be used with Remora.Discord to detect phishing content in messages.</Description>
    <PackageProjectUrl>https://github.com/VelvetThePanda/PhishingGateway</PackageProjectUrl>
    <RepositoryUrl>https://github.com/VelvetThePanda/PhishingGateway</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0" />
    <PackageReference Include="Microsoft.Toolkit.HighPerformance" Version="7.1.2" />
    <PackageReference Include="Remora.Results" Version="7.1.1" />
  </ItemGroup>

</Project>
